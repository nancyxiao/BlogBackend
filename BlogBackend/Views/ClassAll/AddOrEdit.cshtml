@model DBClassLibrary.ClassAll
@addTagHelper *, BlogBackend
@{ Layout = null;}


<form id="frmAddOrEdit" asp-action="AddOrEdit" onsubmit="return jQueryAjaxPost(this);">
    <div class="form-group">
        <label>會員帳號</label>
        <input type="text" asp-for="UserId" class="form-control">
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>分類ID</label>
        <input type="text" asp-for="ClassId" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label>分類名稱</label>
        <input type="text" asp-for="ClassName" class="form-control" required>
    </div>


    <div class="row role can-maintain">
        <div class="col-md-6">
            <input type="button" class="btn btn-default btn-light btn-block" data-dismiss="modal" value="取消">
        </div>
        <div class="col-md-6">
            <input type="submit" class="btn btn-primary btn-block" value="儲存">
            <input type="hidden" id="State" value="@ViewBag.State" />
        </div>
    </div>
</form>

<script>
    $(function () {
        //顯示或隱藏畫面DOM物件
        showOrHide();

    });

    showOrHide = () => {
        var state = $('#State').val();
        if (state == 'add') {
            $('#UserId').removeAttr('readonly');
        }
        else {
            $('#UserId').attr('readonly', true);
        }
    }
</script>



